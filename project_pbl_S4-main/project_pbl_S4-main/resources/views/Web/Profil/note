                border-bottom:2px solid #064635; 
                border-radius: 0 0 10px 10px;
            }
        }
</style>
<script>
     var swiper = new Swiper('.swiper-container', {
        slidesPerView: 'auto', // Menampilkan jumlah slide sesuai ukuran layar
        spaceBetween: 10, // Jarak antara slide
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });

    // Mengecek apakah perangkat adalah Android
    var isAndroid = /(android)/i.test(navigator.userAgent);

    // Mengecek apakah perangkat adalah iPhone
    var isiPhone = /(iphone)/i.test(navigator.userAgent);

    // Mengecek apakah perangkat adalah iPad
    var isiPad = /(ipad)/i.test(navigator.userAgent);

    // Mengubah jumlah slide yang ditampilkan hanya di mode Android, iPhone, atau iPad
    if (isAndroid || isiPhone) {
        swiper.params.slidesPerView = 1;
    } else if (isiPad) {
        swiper.params.slidesPerView = 2;
    }

    swiper.update();

    // Menggunakan media query CSS untuk mengatur jumlah slide di mode desktop
    var desktopMediaQuery = window.matchMedia('(min-width: 992px)');

    // Fungsi pembaruan swiper saat lebar layar berubah
    function updateSwiper() {
        if (desktopMediaQuery.matches) {
            swiper.params.slidesPerView = 4;
        } else {
            swiper.params.slidesPerView = 'auto';
        }
        swiper.update();
    }

    // Memanggil fungsi pembaruan saat halaman dimuat dan saat lebar layar berubah
    updateSwiper();
    window.addEventListener('resize', updateSwiper);

    function showDetail(pohonId) {
        // Mendapatkan elemen-elemen detail
        var detailPohon = document.getElementById("detail-pohon");
        var detailImage = document.getElementById("detail-image");
        var detailNama = document.getElementById("detail-nama");
        var detailNamaLain = document.getElementById("detail-nama-lain");
        var detailDeskripsi = document.getElementById("detail-deskripsi");
        var detailManfaat = document.getElementById("detail-manfaat");
        var detailManfaat2 = document.getElementById("detail-manfaat-2");
        var detailManfaat3 = document.getElementById("detail-manfaat-3");
        var listDetailManfaat = document.getElementById("list-detail-manfaat");
        var listDetailManfaat2 = document.getElementById("list-detail-manfaat-2");
        var listDetailManfaat3 = document.getElementById("list-detail-manfaat-3");
        var syaratTumbuh = document.getElementById("syarat-tumbuh");
        var syaratTumbuh2 = document.getElementById("syarat-tumbuh-2");
        var syaratTumbuh3 = document.getElementById("syarat-tumbuh-3");

        var lihatLebihLengkapButton = document.getElementById("lihat-lebih-lengkap-button");
        
        // Mengganti konten detail sesuai dengan pohon yang diklik
        if (pohonId === 1) {
            detailImage.src = "{{url('/')}}/assets-web2/assets/images/katalog-pohon/api-api.jpg";
            detailNama.innerHTML = "Mangrove Jenis Api-Api";
            detailNamaLain.innerHTML = "(Avicennia spp)";
            detailDeskripsi.innerHTML = "Avicennia di Indonesia dikenal dengan nama api-api, dimana dicirikan dengan perakaran yang"+
                                        "berbentuk pinsil menonjol dari permukaan air yang berfungsi sebagai akar nafas."+
                                        "Akar nafas yang dimiliki oleh mangrove jenis ini merupakan akar yang berbentuk seperti"+
                                        "pensil atau kerucut yang menonjol ke atas. Akar nafas terbentuk dari perluasan akar yang "+
                                        "tumbuh secara horizontal.";
            listDetailManfaat.innerHTML ="Pengurangan Abrasi Pesisir : ";
            detailManfaat.innerHTML =   "Tanaman mangrove jenis Api-Api berperan penting dalam melindungi pesisir dari abrasi dan erosi."+
                                        " Akar-akar yang kompleks membantu mengikat sedimen dan memperlambat aliran air, mengurangi dampak"+
                                        " erosi oleh ombak dan arus laut. Mangrove berfungsi sebagai penghalang alami yang melindungi pesisir dari erosi.";
            listDetailManfaat2.innerHTML ="Pelindung dari Angin dan Tsunami:" ;                         
            detailManfaat2.innerHTML =  "Api-Api berfungsi sebagai penghalang alami terhadap angin dan gelombang laut. Daun dan batang Api-Api"+ 
                                        "menyerap dan memecah kekuatan angin, mengurangi dampaknya pada pesisir. Akar yang kuat mampu menahan" +
                                        "aliran air tsunami, mengurangi kerusakan yang disebabkan oleh gelombang tersebut.";
            syaratTumbuh.innerHTML =" Membutuhkan waktu pembibitan selama 2 minggu.";
            syaratTumbuh2.innerHTML =" Dapat tumbuh di tanah dengan rentang pH 0-7, yang mencakup tanah asam hingga netral.";
            syaratTumbuh3.innerHTML =" Tumbuh di tepian sungai atau daerah pesisir yang memiliki akses ke air tawar.";
            lihatLebihLengkapButton.href = "{{url('Katalog-Pohon/Api-api')}}";
        } else if (pohonId === 2) {
            detailImage.src = "{{url('/')}}/assets-web2/assets/images/katalog-pohon/pepada.jpg";
            detailNama.innerHTML = "Mangrove Pepada";
            detailNamaLain.innerHTML = "(Sonneratia)/Gedabu";
            detailDeskripsi.innerHTML = "Sonneratia dikenal umum dengan nama pedada dengan sistem perakaran umumnya berbentuk pinsil (pneumatophora)" +
                                        "dan dibedakan dari Avicennia dari bentuk bunga, buah dan bentuk daun.  Di Indonesia umum dijumpai 3 (tiga)" +
                                        "jenis, yaitu S. alba, S. caseolaris, dan S. ovata.  ";
            listDetailManfaat.innerHTML = "Perlindungan pantai:";
            detailManfaat.innerHTML = " Tanaman ini tahan terhadap ombak air laut dan dapat melindungi pantai dari erosi dan abrasi.";
            listDetailManfaat2.innerHTML = "Pemfilteran air: ";
            detailManfaat2.innerHTML = " Mangrove Pepada (Sonneratia)/Gedabu berperan sebagai filter alami, membersihkan air dari polutan dan sedimen.";
            syaratTumbuh.innerHTML = "Tanaman ini dapat bertahan dalam air dengan salinitas tinggi.";
            syaratTumbuh2.innerHTML = "Lingkungan tanah yang khas: Mangrove Pepada (Sonneratia)/Gedabu tumbuh di tanah lumpur dalam yang kurang asin.";
            syaratTumbuh3.innerHTML = "Waktu pembibitan: Proses pembibitan tanaman ini membutuhkan waktu sekitar 3-4 minggu.";
        } else if (pohonId === 3) {
            detailImage.src = "{{url('/')}}/assets-web2/assets/images/katalog-pohon/bakau.jpg";
            detailNama.innerHTML = "Bakau ";
            detailNamaLain.innerHTML = "(Rhizophora sp)";
            detailDeskripsi.innerHTML = "Deskripsi pohon ketiga.";
            listDetailManfaat.innerHTML = "";
            detailManfaat.innerHTML = "";
            listDetailManfaat2.innerHTML = "";
            detailManfaat2.innerHTML = "";
            syaratTumbuh.innerHTML = "";
            syaratTumbuh2.innerHTML = "";
            syaratTumbuh3.innerHTML = "";
        } else if (pohonId === 4) {
            detailImage.src = "{{url('/')}}/assets-web2/assets/images/katalog-pohon/lacang.jpg";
            detailNama.innerHTML = "Lacang";
            detailNamaLain.innerHTML = " (Bruguiera sp)";
            detailDeskripsi.innerHTML = "Deskripsi pohon keempat.";
            listDetailManfaat.innerHTML = "";
            detailManfaat.innerHTML = "";
            listDetailManfaat2.innerHTML = "";
            detailManfaat2.innerHTML = "";
            syaratTumbuh.innerHTML = "";
            syaratTumbuh2.innerHTML = "";
            syaratTumbuh3.innerHTML = "";
        } else if (pohonId === 5) {
            detailImage.src = "{{url('/')}}/assets-web2/assets/images/katalog-pohon/nipah.jpg";
            detailNama.innerHTML = "Nipah ";
            detailNamaLain.innerHTML = "(Nypa fruticans) jenis Tanaman Bakau Berbentuk Palem";
            detailDeskripsi.innerHTML = "Deskripsi pohon kelima.";
            listDetailManfaat.innerHTML = "";
            detailManfaat.innerHTML = "";
            listDetailManfaat2.innerHTML = "";
            detailManfaat2.innerHTML = "";
            syaratTumbuh.innerHTML = "";
            syaratTumbuh2.innerHTML = "";
            syaratTumbuh3.innerHTML = "";
        }

        

        // Menandai card pohon yang dipilih sebagai aktif
        var cardPohon = document.getElementsByClassName("card-pohon");
        for (var i = 0; i < cardPohon.length; i++) {
            cardPohon[i].classList.remove("active");
        }
        cardPohon[pohonId - 1].classList.add("active");
        
        // Menampilkan detail pohon dan menyembunyikan swiper
        detailPohon.style.display = "block";
        var swiperContainer = document.getElementsByClassName("swiper-container")[0];

        // Menampilkan detail pohon dengan animasi dropdown
        detailPohon.classList.add("active");
        
        // Menggulir ke bagian detail pohon hanya jika bukan saat halaman pertama kali dimuat
        if (detailPohon.classList.contains("loaded")) {
            detailPohon.scrollIntoView({
            behavior: "smooth",
            block: "center",
            inline: "center",
            });
        } else {
            detailPohon.classList.add("loaded");
        }
    }
        
    // Menampilkan detail pohon pertama saat halaman dimuat
    window.addEventListener('DOMContentLoaded', function() {
        showDetail(1); // Menampilkan detail pohon dengan id 1 (card pertama)
    });
</script>